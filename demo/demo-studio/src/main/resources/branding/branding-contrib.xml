<?xml version="1.0" encoding="UTF-8"?>
<component name="demo.studio.branding" version="1.0.0">
    <require>org.nuxeo.runtime.started</require>
    <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService" point="loginScreen">
        <loginScreenConfig>
            <defaultLocale>zh</defaultLocale>
            <supportedLocales>
                <locale>zh_CN</locale>
            </supportedLocales>
            <backgroundImage>no_poster_image</backgroundImage>
            <bodyBackgroundStyle>url("${org.nuxeo.ecm.contextPath}/img/bg.png") 0px 0px no-repeat #000
            </bodyBackgroundStyle>
            <disableBackgroundSizeCover>false</disableBackgroundSizeCover>
            <removeNews>true</removeNews>
            <footerStyle>display: block;</footerStyle>
            <loginBoxBackgroundStyle>#fff repeat scroll 0 0</loginBoxBackgroundStyle>
            <loginBoxWidth>300px</loginBoxWidth>
            <loginButtonBackgroundColor>#d71921</loginButtonBackgroundColor>
            <videos loop="true" muted="true">
                <video src=""/>
            </videos>
            <logoUrl>${org.nuxeo.ecm.contextPath}/img/ikms.png</logoUrl>
            <logoWidth>200px</logoWidth>
            <logoHeight>45px</logoHeight>
        </loginScreenConfig>
    </extension>
</component>